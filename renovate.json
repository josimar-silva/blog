{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    "abandonments:recommended",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
    ":configMigration",
    ":pinDevDependencies",
    ":pinAllExceptPeerDependencies",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests"
  ],
  "prHourlyLimit": 30,
  "prConcurrentLimit": 15,
  "reviewers": ["josimar-silva"],
  "labels": ["automated", "dependencies"],
  "npmrcMerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "after 10pm on sunday"
  },
  "packageRules": [
    {
      "matchPackageNames": ["eslint"],
      "matchPackagePatterns": ["^eslint-plugin", "^@typescript-eslint/"],
      "groupName": "eslint packages"
    },
    {
      "matchPackageNames": ["typescript", "ts-node", "ts-jest"],
      "matchPackagePatterns": ["^@tsconfig/"],
      "groupName": "typescript packages"
    },
    {
      "matchPackageNames": ["jest", "@types/jest"],
      "groupName": "jest packages"
    },
    {
      "depTypeList": ["dependencies"],
      "labels": ["dependencies"],
      "updateTypes": ["minor", "patch"]
    },
    {
      "depTypeList": ["devDependencies"],
      "labels": ["dev-dependencies"],
      "updateTypes": ["minor", "patch"]
    }
  ]
}
